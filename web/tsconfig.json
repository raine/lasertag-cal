{
  "compilerOptions": {
    "target": "esnext",
    "module": "CommonJS",
    "lib": ["dom", "dom.iterable", "es2015", "es2017", "es2018", "es2019"],
    "jsx": "preserve",
    "moduleResolution": "node",
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "baseUrl": "./src",
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "public", ".cache", "build", "scripts"]
}
